[
  "precision mediump float;",

  "attribute vec2 positions1;",
  "attribute vec2 positions2;",

  "uniform mat3 translationMatrix;",
  "uniform mat3 projectionMatrix;",

  "uniform float phase;",
  "uniform float normalX;",

  "varying vec2 vUvs;",

  "void main() {",
  "  vec2 aVertices = mix(positions1, positions2, phase);",
  "  vec2 result = (projectionMatrix * translationMatrix * vec3(aVertices, 1.0)).xy;",

  "  vUvs = aVertices / 1024.0;",

  "  if (normalX < 0.0) {",
  "    result.x = -result.x;",
  "    vUvs.x = 1.0 - vUvs.x;",
  "  }",

  "  gl_Position = vec4(result, 0, 1);",
  "}"
]