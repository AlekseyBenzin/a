[
  "varying vec2 vTextureCoord;",

  "uniform sampler2D uSampler;",
  "uniform float value;",

  "vec4 blur() {",
  "  vec4 color;",
  "  vec2 offset = vec2(value);",

  "  color += texture2D(uSampler, vTextureCoord) * 0.3;",
  "  color += texture2D(uSampler, vTextureCoord + offset) * 0.35;",
  "  color += texture2D(uSampler, vTextureCoord - offset) * 0.35;",

  "  return color;",
  "}",

  "void main(void) {",
  "  vec4 texture = texture2D(uSampler, vTextureCoord);",
  "  vec2 middle = vec2(0.5);",

  "  float dist = distance(vTextureCoord, middle);",

  "  gl_FragColor = mix(texture, blur(), dist);",
  "}"
]