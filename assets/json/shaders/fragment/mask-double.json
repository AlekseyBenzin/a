[
  "precision mediump float;",

  "varying vec2 vUvs;",

  "uniform vec4 color;",

  "uniform sampler2D mask;",
  "uniform sampler2D mask2;",

  "uniform vec2 maskPos;",
  "uniform vec2 maskPos2;",

  "void main() {",
  "  vec2 uv = vUvs;",

  "  vec4 maskTexture = texture2D(mask, uv - maskPos);",
  "  vec4 maskTexture2 = texture2D(mask2, uv - maskPos2);",

  "  gl_FragColor = vec4(color.rgb, maskTexture.a);",
  "}"
]